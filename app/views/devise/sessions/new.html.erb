<div class="full-screen flex f-center">
  <div class="w-50 h-100 bg-p-dark flex f-c f-center-vh text-ele-w">
    <div class="mb-4">
      <%= render partial: "components/logo" %>
    </div>
    <h1 class=" text-center mb-3 text-lg mx-lg" >Login & Start Creating your first task  </h1>
    <p class="text-w-hint w-50 text-center">Lorem Ipsum is simply dummy text of the printing and typesetting industry.</p>

  </div>
  <div class="w-50 h-100 bg-c flex f-center-vh f-c text-ele-b">
    <h2 class="text-lg">Log in</h2>
    <%= form_for(resource,:html => {:class => "w-100 px-xl "}, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="input-field">
        <%# <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, placeholder: "Email", autocomplete: "email" %>
      </div>
      <div class="input-field">
        <%# <%= f.label :password %><br />
        <%= f.password_field :password, autocomplete: "current-password" , placeholder: "Password"%>
      </div>

      <div class="actions mt-3 flex f-c">
        <%= link_to "Forgot your password?", new_password_path(resource_name), class: "text-sm text-p-dark  text-underline" %>
  <%= link_to "create new account", new_registration_path(resource_name), class: "text-sm mt-1 text-p-dark  text-underline" %>

        <%= f.submit "Log in" ,class: "btn mt-2" %>
      </div>
    <% end %>
  </div>
</div>
