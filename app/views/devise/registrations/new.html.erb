<div class="full-screen flex f-center">
  <div class="w-50 h-100 bg-p-dark flex f-c f-center-vh text-ele-w">
    <div class="mb-4">
      <%= render partial: "components/logo" %>
    </div>
    <h1 class=" text-center mb-3 text-lg mx-lg" >Register & Start Creating your first task </h1>
    <p class="text-w-hint w-50 text-center">Lorem Ipsum is simply dummy text of the printing and typesetting industry.</p>
  </div>
  <div class="w-50 h-100 bg-c flex f-center-vh f-c text-ele-b">
    <h2  class="text-lg mb-4">Sign up</h2>
    <%= form_for(resource,:html => {:class => "w-100 px-xl "}, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <div class="input-field mb-3">
        <%= f.text_field :full_name ,placeholder: "Full Name", autofocus: true, autocomplete: "Full Name" %>
      </div>
      <div class="input-field mb-3">
        <%= f.email_field :email,placeholder: "Email", autofocus: true, autocomplete: "email" %>
      </div>
      <div class="input-field mb-2">
        <%= f.password_field :password, placeholder: "Password", autocomplete: "new-password" %>
        <% if @minimum_password_length %>
          <p class="text-sm">(<%= @minimum_password_length %> characters minimum)</p>
        <% end %>
      </div>
      <div class="input-field mb-3">
        <%= f.password_field :password_confirmation, placeholder: "Confirm Password", autocomplete: "new-password" %>
      </div>
      <div class="actions mt-3">
        <%= link_to "Already User? Login", new_session_path(resource_name), class: "text-sm text-p-dark mb-2 text-underline" %><br />
        <%= f.submit "Sign up", class: "btn btn-md mt-2" %>
      </div>
    <% end %>
  </div>
</div>
